{
    "info": {
        "name": "FitnessTracker Trainings API",
        "_postman_id": "training-api-collection",
        "description": "Collection to test the Trainings API endpoints of the FitnessTracker application.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Get All Trainings",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "http://localhost:8080/v1/trainings",
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "8080",
                    "path": [
                        "v1",
                        "trainings"
                    ]
                }
            }
        },
        {
            "name": "Get Trainings For User",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "http://localhost:8080/v1/trainings/{{userId}}",
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "8080",
                    "path": [
                        "v1",
                        "trainings",
                        "{{userId}}"
                    ]
                }
            }
        },
        {
            "name": "Add Training For User",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"startTime\": \"2025-12-20T08:00:00.000+00:00\",\n  \"endTime\": \"2025-12-20T09:30:00.000+00:00\",\n  \"activityType\": \"RUNNING\",\n  \"distance\": 10.5,\n  \"averageSpeed\": 8.2\n}"
                },
                "url": {
                    "raw": "http://localhost:8080/v1/trainings/user/{{userId}}",
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "8080",
                    "path": [
                        "v1",
                        "trainings",
                        "user",
                        "{{userId}}"
                    ]
                }
            }
        }
    ],
    "variable": [
        {
            "key": "userId",
            "value": "1"
        }
    ]
}